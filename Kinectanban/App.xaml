<Application x:Class="Kinectaban.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="FontColour" Color="White" />
        <SolidColorBrush x:Key="BackgroundColour" Color="#6696B3"/>
        <SolidColorBrush x:Key="UserStoryColour" Color="#a200ff" />
        <SolidColorBrush x:Key="DefectColour" Color="#f47835" />
        <SolidColorBrush x:Key="ReadyColour" Color="#8ec127" />
        <SolidColorBrush x:Key="BlockedColour" Color="#d41243" />

        <Style  TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource BackgroundColour}" />
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="{StaticResource FontColour}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}" x:Key="TextBlockHeader">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Application.Resources>
</Application>
